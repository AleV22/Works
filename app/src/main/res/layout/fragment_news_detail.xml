<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.usuario.reciclernuevo.View.fragments.FragmentnewsDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageViewFotoDetalle"
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:src="@drawable/willy"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/textViewCategoriaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorLetra"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/textViewNombreDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textViewDescripcionDetalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Descripcion"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_share_black_24dp"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="290dp"
        android:elevation="10dp"
        app:fabSize="normal"


        />

</android.support.design.widget.CoordinatorLayout>

    <!--app:layout_anchor="@id/imageViewFotoDetalle"-->
    <!--app:layout_anchorGravity="bottom|right"-->